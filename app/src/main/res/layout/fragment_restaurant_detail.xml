<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="50dp"
    android:paddingBottom="100dp"
    android:background="#FAF3DC">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/detail_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="12dp"
            android:background="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/detail_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Burger"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#008000" />

        </LinearLayout>

        <TextView
            android:id="@+id/textUbicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bloque 19 - Primer Piso"
            android:textSize="14sp"
            android:textColor="#444" />

        <TextView
            android:id="@+id/textDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Hamburguesas deliciosas, ambiente relajado. Ven a disfrutar del sabor."
            android:textSize="14sp"
            android:textColor="#555" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_estrella" />

            <TextView
                android:id="@+id/textRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:textSize="14sp"
                android:layout_marginEnd="12dp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_reloj" />

            <TextView
                android:id="@+id/detail_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="De 10:00 am a 6:00 pm"
                android:textSize="14sp"
                android:layout_marginEnd="12dp" />

            <!-- Precio -->
            <TextView
                android:id="@+id/textPrecioIcono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textPrecioDesde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desde 5.000"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingBottom="8dp"
            android:background="@android:color/transparent">

            <TextView
                android:id="@+id/tabMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Menú"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/tabValoraciones"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Valoraciones"
                android:textSize="16sp"
                android:gravity="center"
                android:paddingBottom="4dp" />
        </LinearLayout>
        <ListView
            android:id="@+id/containerProductos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <Button
            android:id="@+id/btn_back_to_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← Volver"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</LinearLayout>


